<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".storyview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="780dp"
        android:background="@color/black">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="30dp"
            android:id="@+id/story"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_6" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnclose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/transparent"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/close"
                android:layout_gravity="center"
                android:padding="4dp"
                app:tint="@color/tintedbied"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/vector"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/transparent"
            android:layout_toRightOf="@id/close"
            android:layout_alignTop="@id/close"
            android:layout_marginLeft="100dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/vector"
                android:layout_gravity="center"
                android:padding="4dp"
                app:tint="@color/tintedbied"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/ai"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/transparent"
            android:layout_toRightOf="@id/vector"
            android:layout_alignTop="@id/vector"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ai"
                android:layout_gravity="center"
                android:padding="4dp"
                app:tint="@color/tintedbied"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/filter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/transparent"
            android:layout_toRightOf="@id/ai"
            android:layout_alignTop="@id/ai"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/filters"
                android:layout_gravity="center"
                android:padding="4dp"
                app:tint="@color/tintedbied"/>
        </androidx.cardview.widget.CardView><androidx.cardview.widget.CardView
            android:id="@+id/options"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/transparent"
            android:layout_toRightOf="@id/filter"
            android:layout_alignTop="@id/filter"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/options"
                android:layout_gravity="center"
                android:padding="4dp"
                app:tint="@color/tintedbied"/>
        </androidx.cardview.widget.CardView>



    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:weightSum="10">

        <!-- Your Stories Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/your_stories_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="4"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#4A4A4A"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <!-- Profile Picture with Pink Border -->
                <androidx.cardview.widget.CardView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/transparent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/white">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/img_4"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <!-- Your Stories Text -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Your stories"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:singleLine="true"
                    android:ellipsize="end" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Close Friends Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/close_friends_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="4"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#4A4A4A"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <!-- Green Circle Icon -->
                <androidx.cardview.widget.CardView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/green">

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="7dp"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/star"
                        app:tint="@color/biege" />

                </androidx.cardview.widget.CardView>

                <!-- Close Friends Text -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Close Friends"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:singleLine="true"
                    android:ellipsize="end" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Send Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/send_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/tintedbied"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/right"
                android:scaleType="centerInside"
                app:tint="@color/biege" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Alternative version with different weight distribution -->

    <ImageView
        android:layout_width="100dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        app:tint="@color/biege"
        android:elevation="10dp"
        android:src="@drawable/homeindicator"/>

</LinearLayout>
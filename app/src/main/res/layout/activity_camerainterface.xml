<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".camerainterface">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@color/black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:background="@color/black"
        >
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/rightarrow"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:elevation="10dp"
            app:tint="@color/white"/>
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/settings"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:elevation="10dp"
            app:tint="@color/white"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/backtomain"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="34dp"
            app:cardBackgroundColor="@color/black"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_6"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:elevation="10dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:weightSum="5">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:src="@drawable/img_6"
                android:layout_gravity="center"
                android:clickable="true"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="34dp"
                android:layout_height="34dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"

                android:clickable="true"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/elflash"
                    app:tint="@color/d3d3d3"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/camera_capture_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/grey"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <!-- Inner White Circle -->
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                    <!-- Camera Icon -->


                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>


            <ImageView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/repost"

                app:tint="@color/white" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_gravity="center"

                android:src="@drawable/smile"
                android:clickable="true"
                app:tint="@color/white"/>
        </LinearLayout>


    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="TYPE"
               android:clickable="true"

               android:paddingRight="30dp"
               android:textColor="@color/bottom"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="LIVE"
               android:paddingRight="30dp"
               android:clickable="true"

               android:textColor="@color/bottom"/>


           <TextView
               android:id="@+id/normal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="NORMAL"
               android:paddingRight="30dp"
               android:textStyle="bold"
               android:clickable="true"
               android:textColor="@color/bottom"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="BOOMERAN"
               android:paddingRight="30dp"
               android:textStyle="bold"
               android:clickable="true"
               android:textColor="@color/bottom"/>



       </LinearLayout>




    </HorizontalScrollView>
    <ImageView
        android:layout_width="100dp"
        android:layout_marginBottom="20dp"
        android:layout_height="3dp"
        app:tint="@color/biege"
        android:layout_alignParentBottom="true"
        android:src="@drawable/homeindicator"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>

</LinearLayout>
